{
    "compilerOptions": {
        "module": "commonjs",
        "target": "esnext",
        "strict": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "jsx": "react",
        "outDir": "dist/",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "lib": ["es2015", "es2016", "es2017", "dom"],
        "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
